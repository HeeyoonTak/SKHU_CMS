<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sofCap.mapper.UserMapper">

	<select id="findAdmin" resultType="String">
		SELECT name FROM user WHERE
		user_type='동아리관리자' ORDER BY id
	</select>

	<select id="findByLoginId" resultType="UserDto">
		SELECT *
		FROM User
		WHERE
		login_id= #{login_id}
	</select>

	<select id="findOne" resultType="UserDto">
		SELECT * FROM USER WHERE id =
		#{id}
	</select>

	<select id="findAll" resultType="UserDto">
		SELECT * FROM User
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT
		User (name, login_id, password, user_type)
		VALUES(#{name},#{login_id},#{password},"동아리 관리자")
	</insert>

	<update id="update">
		UPDATE User SET
		password = #{user_type}
		WHERE id =
		#{id}
	</update>
	<delete id="delete">
		DELETE FROM User WHERE id = #{id}
	</delete>
</mapper>