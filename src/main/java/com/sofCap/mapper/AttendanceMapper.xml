<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sofCap.mapper.AttendanceMapper">

	<select id="findByDate" resultType="AttendanceDto">
		SELECT DISTINCT
		DATE_FORMAT(date,'%Y-%m-%d') date
		FROM attendance;
	</select>

	<select id="CountByDate" resultType="AttendanceDto">
		SELECT COUNT(DISTINCT date)
		FROM attendance;
	</select>

	<select id="findAttendance" resultType="AttendanceDto">
		SELECT `check`
		FROM
		attendance a JOIN club c
		WHERE
		c.club_name = '동아리연합회' AND a.date =
		'2020-03-03';
	</select>
</mapper>